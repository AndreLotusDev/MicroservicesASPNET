@model IEnumerable<ProductModel> 

<br />
<br />
<br />
<div class="container p-4 border">

    <div class="row pb-2">

        <div class="col">

            <h1 class="text-primary">Products List</h1>

        </div>

         <div class="col text-end pt-1">

             <a asp-action="ProductCreate" asp-controller="Product" class="btn btn-outline-primary">
                  <i class="fa-thin fa-plus"></i>Create new product
             </a>

        </div>

    </div>
    <table class="table">

        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var item in Model)
            {
                 <tr>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>(@item.Price.ToString("c"))</td>
                    <td>
                        <a class="btn btn-success" asp-action="ProductUpdate" asp-controller="Product" asp-route-id="@item.Id">
                            <i class="fa fa-edit"></i>
                        </a>
                         <a class="btn btn-danger" asp-action="ProductDelete" asp-controller="Product" asp-route-id="@item.Id">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>